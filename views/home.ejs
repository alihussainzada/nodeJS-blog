<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>KoalaSEC Blog</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      background-color: #f8f9fa;
    }
    .blog-card {
      box-shadow: 0 0 10px rgba(0,0,0,0.05);
      border-radius: 10px;
      padding: 20px;
      margin-bottom: 20px;
      background-color: white;
    }
    .navbar-brand {
      font-weight: bold;
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
    <div class="container">
      <a class="navbar-brand" href="/">KoalaSEC</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="/about">About</a></li>
          <% if (user) { %>
            <li class="nav-item"><a class="nav-link" href="/auth/profile">Panel</a></li>
            <li class="nav-item"><a class="nav-link text-danger" href="/auth/logout">Logout</a></li>
          <% } else { %>
            <li class="nav-item"><a class="nav-link" href="/auth/login">Login</a></li>
            <li class="nav-item"><a class="nav-link" href="/auth/register">Register</a></li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Main Blog Area -->
  <div class="container mt-5">
    <h2 class="mb-4">Latest Blogs</h2>
    
    <% if (blogs && blogs.length > 0) { %>
      <% blogs.forEach(blog => { %>
        <div class="blog-card">
          <h4><%= blog.title %></h4>
          <p class="text-muted">By <%= blog.authorName %> on <%= blog.createdAt.toDateString() %></p>
          <p><%= blog.content.substring(0, 200) %>...</p>
          <a href="/blogs/<%= blog.id %>" class="btn btn-sm btn-primary">Read More</a>
        </div>
      <% }) %>
    <% } else { %>
      <p>No blog posts available yet.</p>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
