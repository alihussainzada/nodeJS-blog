<!-- views/reset-password.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Reset Password - KoalaSEC</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: #f0f2f5;
    }
    .reset-container {
      max-width: 400px;
      margin: 100px auto;
      padding: 30px;
      background: white;
      box-shadow: 0 0 15px rgba(0,0,0,0.1);
      border-radius: 10px;
    }
    .reset-title {
      text-align: center;
      margin-bottom: 20px;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="reset-container">
      <h2 class="reset-title">Reset Your Password ðŸ”’</h2>

      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger" role="alert">
          <%= error %>
        </div>
      <% } %>

      <% if (typeof success !== 'undefined' && success) { %>
        <div class="alert alert-success" role="alert">
          <%= success %>
        </div>
      <% } %>

        <form action="/auth/forgot-password/<%= token %>" method="POST">
        <div class="mb-3">
          <label for="password" class="form-label">New Password</label>
          <input type="password" class="form-control" id="password" name="password" required placeholder="Enter new password">
        </div>
        <div class="mb-3">
          <label for="confirmPassword" class="form-label">Confirm Password</label>
          <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required placeholder="Confirm new password">
        </div>

        <button type="submit" class="btn btn-primary w-100">Reset Password</button>
        <a href="/auth/login" class="btn btn-outline-success w-100 mt-3">Login</a>

      </form>
    </div>
  </div>
</body>
</html>
